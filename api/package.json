{
  "name": "api",
  "version": "1.0.0",
  "description": "Hotel Management API using Express, TypeScript, Drizzle ORM, and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "pnpm build && node dist/index.js",
    "generate": "drizzle-kit generate --config=src/drizzle.config.ts",
    "migrate": "tsx src/drizzle/migrate.ts",
    "seed": "tsx src/Drizzle/seed.ts",
    "test": "echo \"No test suite configured\" && exit 0"
  },
  "keywords": [],
  "author": "Emmanuel Mose",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
