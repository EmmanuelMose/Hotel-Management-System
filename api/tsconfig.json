{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts"  
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
